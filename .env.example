# Server Configuration
PORT=3000                 # Port on which the server will run
NODE_ENV=development      # Environment mode (development, production)

# JWT Authentication
JWT_SECRET=<JWT_SECRET>   # Secret key for JWT token signing
JWT_VALIDITY=12h          # Token expiration time (e.g., 12h, 7d)

# Database Configuration
MONGODB_URI=<MONGODB_URI> # MongoDB connection URI

# CORS Configuration
CORS_ORIGINS=*            # Allowed origins for CORS (comma-separated URLs)

# Logging Configuration
LOG_LEVEL=info            # Logging level (info, warn, error, debug)

# AES Encryption Configuration
AES_SECRET=<AES_ENCRYPTION_SECRET>  # Secret key for AES encryption
